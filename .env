# Основные настройки Flask
FLASK_APP=app.py
FLASK_DEBUG=True  # Вместо устаревшего FLASK_ENV=development

# Безопасность
SECRET_KEY=ваш_уникальный_секретный_ключ_тут  # Минимум 32 случайных символа

# Настройки базы данных
DATABASE_URL=sqlite:///instance/site.db  # Путь к SQLite базе
# Или для PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/dbname

# Дополнительные настройки (опционально)
UPLOAD_FOLDER=uploads  # Папка для загрузки файлов
MAX_CONTENT_LENGTH=16777216  # Лимит загрузки файлов (16MB)
